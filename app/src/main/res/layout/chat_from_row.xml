<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_from_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_android_black_24dp"

        />
    <TextView
        android:id="@+id/tv_received_message"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_toEndOf="@+id/user_from_profile_image"
        android:layout_marginStart="5dp"
        android:background="@drawable/rounded_corner_text_message"
        android:text="@string/this_is_something_of_a_dummy_test"
        android:textSize="16sp"
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        android:maxWidth="260dp"
        />

</RelativeLayout>